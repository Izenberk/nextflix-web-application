{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "es2022"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/domain/*": ["./domain/*"],
      "@/data/*": ["./data/*"],
      "@/presentation/*": ["./presentation/*"],
      "@/store/*": ["./store/*"]
    },

    "plugins": [{ "name": "next" }],
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "types": ["@types/node"]
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "domain/**/*.ts",
    "domain/**/*.tsx",
    "data/**/*.ts",
    "data/**/*.tsx",
    "presentation/**/*.ts",
    "presentation/**/*.tsx",
    "store/**/*.ts",
    "store/**/*.tsx",
    "next-env.d.ts",
    "next.config.*",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
